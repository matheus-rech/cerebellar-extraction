# Cerebellar Extraction - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# Google/Firebase API Keys
# ==========================================

# Firebase API Key (from Firebase Console > Project Settings)
FIREBASE_API_KEY=your_firebase_api_key_here

# Gemini API Key (from https://aistudio.google.com)
GOOGLE_GENAI_API_KEY=your_gemini_api_key_here

# ==========================================
# Cloud Functions Configuration
# ==========================================

# CORS allowed origins (comma-separated)
# For production, set to your actual domain(s)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:5002

# ==========================================
# Firebase Emulator Settings (local dev)
# ==========================================

# Set to true to use Firebase emulators
USE_EMULATORS=true

# Emulator ports (defaults shown)
# FIRESTORE_EMULATOR_HOST=127.0.0.1:8080
# FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099
# FIREBASE_STORAGE_EMULATOR_HOST=127.0.0.1:9199

# ==========================================
# Genkit Configuration
# ==========================================

# Genkit server port
GENKIT_PORT=3400

# Enable telemetry (optional)
# GENKIT_TELEMETRY_ENABLED=false
